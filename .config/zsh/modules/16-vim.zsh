# shellcheck shell=bash
# =============================================================================
# Vim
# =============================================================================
alias vi='vim'
alias v='vim'
alias vimdiff='vim -d'
alias vimrc='vim ~/.vimrc'
alias vimplug='vim ~/.vim/autoload_plugins.vim'
alias vimplugconf="vim ~/.vim/plugin_config.vim"
alias vimtmp='vim -u NONE -N'
alias vimcd='vim -c "cd %:p:h"'
alias vimtab='vim --remote-tab'
alias vimsplit='vim --remote-silent'
alias vshorts="bat ~/.config/vim/cheatsheet.md"
