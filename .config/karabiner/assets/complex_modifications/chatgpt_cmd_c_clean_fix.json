{
  "title": "ChatGPT Cmd+C Focus Fix (Clean)",
  "rules": [
    {
      "description": "Force WebView focus then copy in ChatGPT",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.openai\\.chatgpt$"]
            }
          ],
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["control"],
              "repeat": false
            },
            {
              "key_code": "c",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    }
  ]
}
