#!/usr/bin/env bash
set -euo pipefail

echo "ğŸ” Linting shell scripts with shellcheck..."
find "$HOME/.config/zsh/modules" -type f -name '*.zsh' -exec shellcheck {} +

echo "ğŸ” Formatting check for shell scripts with shfmt..."
shfmt -d "$HOME/.config/zsh/modules"

echo "ğŸ” YAML linting..."
yamllint "$HOME/.pre-commit-config.yaml"

echo "âœ… All linting checks passed!"
