#!/usr/bin/env bash
set -euo pipefail

# -----------------------------------------------------------------------------
# 📦 Backup yadm-tracked dotfiles before doing anything else
# -----------------------------------------------------------------------------
if [[ -x "$HOME/bin/tools/backup/backup-tracked-dotfiles.sh" ]]; then
  "$HOME/bin/tools/backup/backup-tracked-dotfiles.sh"
else
  echo "⚠️  Backup script not found or not executable: $HOME/bin/tools/backup/backup-tracked-dotfiles.sh"
  echo "❌ Aborting setup to avoid overwriting existing files."
  exit 1
fi

# -----------------------------------------------------------------------------
# 🧠 Select Installation Profile
# -----------------------------------------------------------------------------
echo "────────────────────────────────────────────"
echo "🧠 Choose your install profile"
echo "────────────────────────────────────────────"

PROFILE_CHOICE=$(gum choose --header "Choose your experience level:" --cursor "👉" \
  "🧠 Expert - Full tools, AI, vim, tmux, containers" \
  "🧪 Intermediate - CLI tools, no AI or advanced plugins" \
  "🍼 Beginner - Safe defaults, no AI, tmux, or vim plugins" \
  "⚙️ Custom - Pick what to include interactively")

case "$PROFILE_CHOICE" in
  *Expert*)       PROFILE="expert" ;;
  *Intermediate*) PROFILE="intermediate" ;;
  *Beginner*)     PROFILE="beginner" ;;
  *Custom*)       PROFILE="custom" ;;
esac

echo "📁 Profile selected: $PROFILE"

# Persist it to ~/.foundry/.foundryrc
mkdir -p "$HOME/.foundry"
echo "export FOUNDRY_PROFILE=\"$PROFILE\"" > "$HOME/.foundry/.foundryrc"

# Load profile flags
PROFILE_SCRIPT="$HOME/bin/foundry/profiles/$PROFILE.sh"
if [[ -f "$PROFILE_SCRIPT" ]]; then
  # shellcheck source=/dev/null
  source "$PROFILE_SCRIPT"
else
  echo "⚠️ Profile script not found: $PROFILE_SCRIPT"
  exit 1
fi




# Trap CTRL+C to cleanly exit
trap "echo -e '\n❌ Setup cancelled.'; exit 130" INT

# Warn if not inside tmux
if [ -z "${TMUX-}" ]; then
  echo "⚠️  Not inside a tmux session. It's recommended to run setup inside tmux."
else
  echo "✅ Inside tmux session."
fi

# Check if 'gum' is installed
if ! command -v gum &>/dev/null; then
  echo "❌ 'gum' is not installed. Please run: brew install gum"
  exit 1
fi

# ✅ Recommend full bootstrap if user hasn't run it yet
if [[ -f ~/bin/bootstrap/init-machine ]]; then
  echo "ℹ️  If this is a new machine, consider running '~/bin/bootstrap/init-machine' first."
fi

# Interactive menu
choice=$(gum choose \
  "🛠  Run Full Restore" \
  "🔐  Restore Secrets Only" \
  "📤  Backup Secrets to Bitwarden" \
  "🎨  Setup Terminal Theme (Font + Theme)" \
  "🔁  Finalize Setup (plugins, completions)" \
  "📦  Lint Dotfiles" \
  "❌  Exit")

# Helper function to run scripts safely
run_script() {
  local script_path="$1"
  if [[ -x "$script_path" ]]; then
    "$script_path"
  else
    echo "❌ Script not found or not executable: $script_path"
    exit 1
  fi
}

# Handle the choice
case "$choice" in
  "🛠  Run Full Restore")       run_script ~/bin/dev-env/full-restore ;;
  "🔐  Restore Secrets Only")   run_script ~/bin/tools/secrets/secrets-backup-task.sh ;;
  "📤  Backup Secrets to Bitwarden")  run_script ~/bin/tools/secrets/secrets-restore-task.sh ;;
  "🎨  Setup Terminal Theme (Font + Theme)") run_script ~/bin/bootstrap/setup-terminal-theme ;;
  "🔁  Finalize Setup (plugins, completions)") run_script ~/bin/dev-env/finalize ;;
  "📦  Lint Dotfiles")          run_script ~/bin/dev-env/lint-dotfiles ;;
  "❌  Exit")                   echo "Bye 👋"; exit 0 ;;
esac
